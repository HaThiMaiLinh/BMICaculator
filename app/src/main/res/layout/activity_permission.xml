<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_15sdp"
        android:background="@color/bg"
        tools:context=".ui.activity.PermissionActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="@dimen/_15sdp"
            android:text="@string/tv_permission"
            android:textColor="@color/tv_color_blue"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_165sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/permission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:fontFamily="@font/poppins"
            android:autoLink="none"
            android:textSize="@dimen/_12ssp"
            android:text="@string/tv_des_permission"
            app:layout_constraintTop_toBottomOf="@id/imageView2"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/per_Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/custom_bg_tv"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_margin="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/tv_des">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/tv_item_2"
                android:textColor="@color/black"
                android:text="@string/tv_notification"/>
            
            <ImageView
                android:id="@+id/img_per_Notification"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/switch_off_p"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/per_Read_Storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/custom_bg_tv"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_margin="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/per_Notification">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/tv_item_2"
                android:textColor="@color/black"
                android:text="@string/tv_Read_Storage"/>

            <ImageView
                android:id="@+id/img_per_Read_Storage"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/switch_off_p"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_Go"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_15sdp"
            android:text="@string/tv_go"
            style="@style/tv_item"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/custom_bg_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/per_Read_Storage"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>