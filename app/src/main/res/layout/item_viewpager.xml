<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_5sdp"
        android:background="#F8FAFF">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:src="@drawable/tutorial_2"
            android:scaleType="centerInside"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_welcome_tutorial"
            style="@style/tv_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/tv_welcome"
            android:textColor="#A6080C2F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_title_tutorial"
            style="@style/tv_title_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/title_tutorial1"
            android:layout_margin="@dimen/_4sdp"
            android:textColor="@color/tv_color_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_welcome_tutorial" />

        <TextView
            android:id="@+id/tv_des_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:gravity="center"
            android:text="@string/des_tutorial1"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="4"
            style="@style/tv_item_2"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#A6080C2F"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_tutorial"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>