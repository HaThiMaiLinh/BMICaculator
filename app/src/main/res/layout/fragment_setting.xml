<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.fragment.SettingFragment">

        <TextView
            android:id="@+id/tv_title_setting"
            style="@style/tv_title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_setting"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:textColor="@color/title_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            tools:listitem="@layout/item_setting"
            android:background="@drawable/custom_bg_tv"
            app:layout_constraintTop_toBottomOf="@id/tv_title_setting"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>