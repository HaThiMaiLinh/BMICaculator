<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".ui.activity.VersionActivity">

        <TextView
            android:id="@+id/tv_title_version"
            style="@style/tv_title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_version"
            android:layout_marginTop="@dimen/_32sdp"
            android:textColor="@color/title_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title_version"
            app:layout_constraintStart_toStartOf="@id/tv_title_version"
            app:layout_constraintTop_toTopOf="@+id/tv_title_version"
            android:layout_marginStart="@dimen/_13sdp"
            tools:ignore="MissingConstraints" />
        
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_version"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/logobmi"
            app:layout_constraintEnd_toEndOf="@id/tv_title_version"/>

        <TextView
            android:id="@+id/textView3"
            style="@style/tv_appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/app_name"
            android:textColor="@color/tv_color_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_logo" />

        <TextView
            android:id="@+id/tv_des_version"
            style="@style/tv_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/app_name"
            android:textColor="@color/number_picker_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>